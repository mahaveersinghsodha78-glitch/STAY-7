            'render.yaml': `services:
  - type: web
    name: stay7-frontend
    env: node
    plan: free
    buildCommand: npm install && npm run build
    startCommand: npm run preview
    nodeVersion: 18`
        };

        function downloadFile(filename) {
            const content = files[filename];
            const blob = new Blob([content], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = filename;
            a.click();
            URL.revokeObjectURL(url);
        }

        function downloadAllFiles() {
            let allContent = 'STAY7 FIXED FILES - Copy and paste to GitHub\\n\\n';
            
            for (const [filename, content] of Object.entries(files)) {
                allContent += `===== ${filename} =====\\n${content}\\n\\n`;
            }
            
            allContent += 'INSTRUCTIONS:\\n';
            allContent += '1. Copy each file content\\n';
            allContent += '2. Create new files in GitHub\\n';
            allContent += '3. Upload all files\\n';
            allContent += '4. Delete only if duplicate files exist\\n';
            allContent += '5. Deploy on Render - SUCCESS! ‚úÖ';
            
            const blob = new Blob([allContent], { type: 'text/plain' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = 'stay7-all-fixed-files.txt';
            a.click();
            URL.revokeObjectURL(url);
            
            alert('All fixed files downloaded! Follow the instructions in the file.');
        }
    </script>
